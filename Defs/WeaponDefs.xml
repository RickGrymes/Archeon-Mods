    <!-- Energy Sword -->

    <ThingDef ParentName="BaseMeleeWeapon">
        <defName>Weapon_EnergySword</defName>
        <label>energy sword</label>
        <description>A extremely loud and bright blade made from pure concentrated energy. Cuts through walls and unarmored opponents like butter. The off switch seems to be broken.</description>
        <graphicData>
            <texPath>Weapons/EnergySword</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <statBases>
            <WorkToMake>30000</WorkToMake>
            <Mass>0.7</Mass>
            <MeleeWeapon_AverageDPS>18</MeleeWeapon_AverageDPS>
        </statBases>
        <costList>
            <Plasteel>40</Plasteel>
            <ComponentIndustrial>5</ComponentIndustrial>
            <ComponentSpacer>2</ComponentSpacer>
        </costList>
        <recipeMaker>
            <workAmount>20000</workAmount>
            <recipeUsers>
                <li>TableMachining</li>
            </recipeUsers>
            <researchPrerequisite>LongBlades</researchPrerequisite>
        </recipeMaker>
        <smeltable>true</smeltable>
        <weaponClasses>
            <li>MeleePiercer</li>
        </weaponClasses>
        <tools>
            <li>
                <label>blade</label>
                <capacities>
                    <li>Stab</li>
                    <li>Cut</li>
                </capacities>
                <power>35</power>
                <cooldownTime>1.2</cooldownTime>
                <armorPenetration>0.7</armorPenetration>
            </li>
        </tools>
    </ThingDef>

