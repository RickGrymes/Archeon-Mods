<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--__________ Projectiles __________-->

    <!-- Lecter -->

    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>Archeon_Gun_Lecter</defName>
        <label>Lecter</label>
        <description>A robust military grade assault rifle. Often used by Nanotrasen security, especially on station 14, because of its reliability and price. The blueprints seem to have found themselves on the Rim.</description>
        <graphicData>
            <texPath>Weapons/Lecter</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Interact_Rifle</soundInteract>
        <statBases>
            <WorkToMake>50000</WorkToMake>
            <Mass>4.2</Mass>
            <AccuracyTouch>0.65</AccuracyTouch>
            <AccuracyShort>0.75</AccuracyShort>
            <AccuracyMedium>0.80</AccuracyMedium>
            <AccuracyLong>0.70</AccuracyLong>
            <RangedWeapon_Cooldown>1.6</RangedWeapon_Cooldown>
        </statBases>
        <costList>
            <Steel>60</Steel>
            <ComponentIndustrial>7</ComponentIndustrial>
        </costList>
        <recipeMaker>
            <workAmount>18000</workAmount>
            <recipeUsers>
                <li>TableMachining</li>
            </recipeUsers>
            <researchPrerequisite>BlowbackOperation</researchPrerequisite>
        </recipeMaker>
        <smeltable>true</smeltable>
        <verbs>
            <li>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_Lecter</defaultProjectile>
                <warmupTime>1.1</warmupTime>
                <range>38.0</range>
                <burstShotCount>3</burstShotCount>
                <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
                <soundCast>Archeon_Shot_Lecter</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
    </ThingDef>

